#include <iostream>
using namespace std;

int main()
{
    int num, row, col;
    cin >> num;
    for (row = 0; row < num; row++)
    {
        for (col = 0; col < row + 1; col++)
        {
            cout << "*";
        }

        cout << endl;
    }
    for (row = 0; row < num; row++)
    {
        for (col = 0; col < num - 1 - row; col++)
        {
            cout << "*";
        }
        cout << endl;
    }

    return 0;
}
